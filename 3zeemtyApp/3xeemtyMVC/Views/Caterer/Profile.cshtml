@using _3zeemtyApp.Models.Responses
 @model UserResponse

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: #ff00cc;
            background: -webkit-linear-gradient(to right, #333399, #ff00cc);
            background: linear-gradient(to right, #333399, #ff00cc);
        }

        .container {
            width: 90%;
            margin: 20px auto;
        }

        .profile {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .profile-details {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .profile-info {
            margin-left: 20px;
        }

        .profile-name {
            color: #333;
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .profile-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
        }

        .booking {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
        }

        .booking-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .booking-info {
            flex-grow: 1;
        }

        .booking-name {
            color: #333;
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .booking-service, .booking-date {
            font-size: 16px;
            color: #666;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="profile">
            <div class="profile-details">
                <img class="profile-image" src="https://www.svgrepo.com/show/316857/profile-simple.svg" alt="Profile Image">
                <div class="profile-info">
                    <div class="profile-name">@Model.Name</div>
                </div>
            </div>
        </div>

        <h2>Booking History</h2>

        @foreach (var booking in Model.Bookings)
        {
            <div class="booking">
                <div class="booking-details">
                    <div class="booking-info">
                        <div class="booking-name">@booking.Name</div>
                        <div class="booking-service">@booking.CatererService</div>
                        <div class="booking-date">@booking.Date</div>
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>

